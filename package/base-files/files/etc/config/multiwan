config multiwan 'config'
	option enabled '1'

config interface 'wan'
	option icmp_hosts '8.8.8.8'
	option dns 'auto'
	option health_interval '5'
	option timeout '1'
	option health_fail_retries '3'
	option health_recovery_retries '3'
	option priority '100'
	option execute '0'

config interface 'wan2'
	option icmp_hosts '8.8.4.4'
	option dns 'auto'
	option health_interval '5'
	option timeout '1'
	option health_fail_retries '1'
	option health_recovery_retries '1'
	option priority '99'
	option execute '0'

config interface 'wan3'
	option icmp_hosts '8.8.4.4'
	option dns 'auto'
	option health_interval '10'
	option timeout '3'
	option health_fail_retries '3'
	option health_recovery_retries '3'
	option priority '98'
	option execute '0'

config interface 'wan4'
	option icmp_hosts '8.8.4.4'
	option dns 'auto'
	option health_interval '10'
	option timeout '3'
	option health_fail_retries '3'
	option health_recovery_retries '3'
	option priority '98'
